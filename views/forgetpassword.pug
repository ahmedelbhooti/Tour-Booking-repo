extends base

block content

    main.main
        .registration-form
            h2.heading-secondary.ma-bt-lg Send link to reset password
            form.form.form--forgetPassword
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(
                        type='email',
                        placeholder='you@example.com',
                        required
                    )
                .form__group    
                    button.btn.btn--green Send
